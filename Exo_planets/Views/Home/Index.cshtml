@{
    ViewData["Title"] = "Home Page";
}

<main class="position-relative z-1">
    <section class="container py-5 py-md-6 px-4">
        <div class="text-center mx-auto" style="max-width: 900px;">
            <h1 class="fw-bold display-4 display-md-2">
                Explora el
                <span class="text-gradient">
                    Universo
                </span>
            </h1>

            <p class="fs-4 text-muted lh-lg">
                Descubre los misterios del cosmos, desde planetas distantes hasta galaxias inexploradas
            </p>

            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center pt-3">
                <a href="#" class="btn btn-primary btn-lg">
                    Comenzar Exploración
                </a>
            </div>
        </div>
    </section>

    <section class="container py-5">
        <div class="row g-4">
            <!-- Tarjeta 1 -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card custom-card h-100 p-4">
                    <div class="icon-box bg-primary bg-opacity-25 mb-3">
                        <i class="bi bi-rocket text-primary fs-3"></i>
                    </div>
                    <h5 class="card-title text-white">Misiones Espaciales</h5>
                    <p class="card-text text-light opacity-75">
                        Sigue las misiones más emocionantes de exploración espacial en tiempo real
                    </p>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card custom-card h-100 p-4">
                    <div class="icon-box bg-success bg-opacity-25 mb-3">
                        <i class="bi bi-globe2 text-success fs-3"></i>
                    </div>
                    <h5 class="card-title text-white">Sistema Solar</h5>
                    <p class="card-text text-light opacity-75">
                        Explora los planetas, lunas y asteroides de nuestro sistema solar
                    </p>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card custom-card h-100 p-4">
                    <div class="icon-box bg-primary bg-opacity-25 mb-3">
                        <i class="bi bi-binoculars text-primary fs-3"></i>
                    </div>
                    <h5 class="card-title text-white">Observación</h5>
                    <p class="card-text text-light opacity-75">
                        Aprende a observar el cielo nocturno y descubre constelaciones
                    </p>
                </div>
            </div>

            <!-- Tarjeta 4 -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card custom-card h-100 p-4">
                    <div class="icon-box bg-warning bg-opacity-25 mb-3">
                        <i class="bi bi-stars text-warning fs-3"></i>
                    </div>
                    <h5 class="card-title text-white">Galaxias</h5>
                    <p class="card-text text-light opacity-75">
                        Viaja más allá de nuestra galaxia y descubre el universo profundo
                    </p>
                </div>
            </div>
        </div>
    </section>

</main>


































