@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="position-relative z-1">
    <section class="container py-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold display-5 text-light">
                PREGUNTA A NUESTRO ASISTENTE
            </h2>
        </div>
    </section>

    <div class="container my-4">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 700px; margin: auto;">

            <!-- Encabezado del chat -->
            <div class="card-header bg-primary text-white d-flex align-items-center gap-3">
                <div class="rounded-circle d-flex align-items-center justify-content-center"
                     style="width: 40px; height: 40px; background: rgba(255,255,255,0.2);">
                    <i class="bi bi-robot fs-5"></i>
                </div>
                <div>
                    <h6 class="mb-0 fw-semibold">Asistente Espacial</h6>
                    <small class="text-light opacity-75">En línea</small>
                </div>
            </div>

            <!-- Datos de exoplanetas con diseño mejorado usando solo Bootstrap -->
            <div class="row g-0">
                <div class="col-md-6">
                    <div id="metodo" class="card-header bg-info text-white d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-binoculars me-2"></i>
                            <span>Método</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="nombre" class="card-header bg-success text-white d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-stars me-2"></i>
                            <span>Exoplaneta</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="ratio" class="card-header bg-warning text-dark d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-rulers me-2"></i>
                            <span>Radio</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="temperatura" class="card-header bg-danger text-white d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-thermometer-high me-2"></i>
                            <span>Temperatura</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="año" class="card-header bg-secondary text-white d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar-event me-2"></i>
                            <span>Descubierto</span>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div id="imageContainer" class="card-header bg-dark text-white d-flex align-items-center justify-content-center">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-image me-2"></i>
                            <span>Imagen del Exoplaneta</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cuerpo del chat (scrollable) -->
            <div class="card-body bg-dark text-light" style="height: 400px; overflow-y: auto;">
                <!-- Aquí se insertan los mensajes dinámicos -->
                <p class="text-muted text-center mt-5">[ Mensajes aparecerán aquí 🚀 ]</p>
            </div>

            <!-- Caja de texto inferior -->
            <div class="card-footer bg-secondary-subtle">
                <div class="input-group">
                    <input id="userText" type="text" class="form-control" placeholder="Escribe un mensaje...">
                    <button class="btn btn-primary" type="button" onclick="speakText()">
                        <i class="bi bi-send"></i>
                    </button>
                </div>
            </div>

        </div>
    </div>

</div>

<script src="~/js/speech.js"></script>
